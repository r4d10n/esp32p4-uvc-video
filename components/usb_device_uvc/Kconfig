menu "USB Device UVC"

    config TUSB_VID
        hex "USB Device VID"
        default 0x303A
    config TUSB_PID
        hex "USB Device PID"
        default 0x8000
    config TUSB_MANUFACTURER
        string "USB Device Manufacturer"
        default "Espressif"
    config TUSB_PRODUCT
        string "Product Name"
        default "ESP32-P4 UVC Webcam"
    config TUSB_SERIAL_NUM
        string "Serial Number"
        default "12345678"

    choice TINYUSB_RHPORT
        prompt "TinyUSB Root Port"
        default TINYUSB_RHPORT_HS if IDF_TARGET_ESP32P4
        default TINYUSB_RHPORT_FS
        help
            USB PHY Controller selection: HS (USB OTG2.0 PHY for HighSpeed)

        config TINYUSB_RHPORT_HS
            depends on IDF_TARGET_ESP32P4
            bool "High Speed"

        config TINYUSB_RHPORT_FS
            bool "Full Speed"
    endchoice

    menu "UVC Task Config"
        config UVC_TINYUSB_TASK_PRIORITY
            int "TinyUSB task priority"
            default 24
            range 1 25

        config UVC_TINYUSB_TASK_CORE
            int "TinyUSB task core (-1=no affinity, 0=CPU0, 1=CPU1)"
            default 1
            range -1 1

        config UVC_CAM1_TASK_PRIORITY
            int "Video task priority"
            default 23
            range 1 25

        config UVC_CAM1_TASK_CORE
            int "Video task core (-1=no affinity, 0=CPU0, 1=CPU1)"
            default 0
            range -1 1
    endmenu

endmenu
